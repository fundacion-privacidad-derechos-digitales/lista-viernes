{% extends 'admin/adminLayout.twig' %}

{% block title %}Admin{% endblock %}

{% block content %}

    {% for message in app.flashes('notice') %}
        <div class="card bg-primary my-5">
            <div class="card-body">{{ message|trans }}</div>
        </div>
    {% endfor %}

    <div class="row mt-5 mb-4">
        <div class="col">
            <h4>
                Dashboard
            </h4>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4">
            <div class="card text-white bg-secondary mb-3">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <i class="far fa-user fa-5x"></i>
                    <div class="text-right">
                        <p class="h2"><small>{{ numberUsersValidated }} / </small>{{ numberUsers }}</p>
                        <div>Usuarios totales / validados</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card text-white bg-dark mb-3">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <i class="far fa-envelope fa-5x"></i>
                    <div class="text-right">
                        <p class="h2"><small>{{ numberEmailsValidated }} / </small>{{ numberEmails }}</p>
                        <div>Emails totales / validados</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card text-white bg-dark mb-3">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <i class="fas fa-mobile-alt fa-5x"></i>
                    <div class="text-right">
                        <p class="h2">{{ numberPhones }}</p>
                        <div>Tel√©fonos</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
