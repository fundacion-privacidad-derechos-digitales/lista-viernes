{% extends 'profile/profileLayout.html.twig' %}

{% block title %}Editar perfil{% endblock %}

{% block content %}

    <h2 class="mt-5 mb-4">
        <a class="nav-back" href="{{ path('app_profile') }}"><i class="fas fa-arrow-left"></i></a> Editar perfil
    </h2>

    {% for message in app.flashes('notice') %}
        <div class="card bg-primary my-1">
            <div class="card-body">
                {{ message|trans }}
            </div>
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card mt-2">
                <div class="card-body">
                    {{ form_start(profileForm) }}
                    <div class="form-row">
                        <div class="col-md-5">
                            {{ form_row(profileForm.name) }}
                        </div>
                        <div class="col-md-7">
                            {{ form_row(profileForm.surname) }}
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-8">
                            {{ form_row(profileForm.idNumber) }}
                        </div>
                        <div class="col-md-4">
                            {{ form_row(profileForm.postalCode) }}
                        </div>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary">{% trans %}button.save{% endtrans %}</button>
                    </div>
                    {{ form_end(profileForm) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
